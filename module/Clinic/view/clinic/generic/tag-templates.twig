{% macro panelDefault(heading,content) %}
<div class="panel panel-default">
    <div class="panel-heading">{{ heading }}</div>
    {{ content }}
</div>
{% endmacro %}

{% macro button(href, content) %}
<a class='btn btn-default btn-xs' href='{{ href }}'>{{ content }}</a>
{% endmacro %}

{% macro icon(name, text) %}
<span class='glyphicon glyphicon-{{ name }}'></span> {{ text }}
{% endmacro %}

{% macro label(name, text, suffixText) %}
<span class='label label-{{ name }}'>{{ text }}</span> {{ suffixText }}
{% endmacro %}

{% macro linkTo(controller, action, entity) %}
<a href='{{ url( 'admin', {'controller' : controller, 'action' : action, 'id' : entity.getId()} ) }}'>
        {{entity.getName()}} {{entity.getSurname()}}
</a>
{% endmacro %}

{% macro href(controller, action, entity) %}
{{ url( 'admin', {'controller' : controller, 'action' : action, 'id' : entity.getId()} ) }}
{% endmacro %}

{% macro listGroupItem(heading, content) %}
<li class="list-group-item">
    <h4 class="list-group-item-heading">{{ heading|raw }}</h4>
    <p class="list-group-item-text">{{ content|raw }}</p>
</li>
{% endmacro %}